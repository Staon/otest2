        "message<b = 10>",
        "leaveAssert<>",
        "assert<check 'a != b' has passed>: passed",
        "message<a = 12>",
        "message<b = 10>",
        "leaveAssert<>",
        "assert<check 'a > b' has passed>: passed",
        "message<a = 10>",
        "message<b = 5>",
        "leaveAssert<>",
        "assert<check 'a >= b' has passed>: passed",
        "message<a = 10>",
        "message<b = 5>",
        "leaveAssert<>",
        "assert<check 'a < b' has failed>: failed",
        "message<a = 10>",
        "message<b = 5>",
        "leaveAssert<>",
        "assert<check 'a <= b' has failed>: failed",
        "message<a = 10>",
        "message<b = 5>",
        "leaveAssert<>",
        "assert<'std::string().empty()'>: passed",
        "leaveAssert<>",
        "assert<'!(10 == 15)'>: passed",
        "leaveAssert<>",
        "leaveState<AnonymousState>: failed",
        "leaveCase<ExpressionAssertion>: failed",
        "leaveSuite<AssertionsSuite>: failed",
        "leaveTest<selftest>: failed",
