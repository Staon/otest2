#include <otest2/otest2.h>

#include <assert.h>
#include <iostream>
#include <vector>

#include <hirschberg.h>

namespace OTest2 {

namespace Test {

TEST_SUITE(Hirschberg) {
  TEST_CASE(SomeStrings) {
    TEST_SIMPLE() {
      const std::string left_("AGGTAB");
      const std::string right_("GXTXAYB");
      std::vector<DiffRecord> diff_;
      hirschbergDiff(
          left_.c_str(), left_.size(), right_.c_str(), right_.size(), diff_);

      for(const auto& rec_ : diff_) {
        switch(rec_.action) {
          case DiffAction::CHANGE:
            std::cout << rec_.left_index << ": < " << left_.at(rec_.left_index) << std::endl;
            std::cout << "---" << std::endl;
            std::cout << rec_.right_index << ": > " << right_.at(rec_.right_index) << std::endl;
            break;
          case DiffAction::INSERT:
            std::cout << rec_.left_index << ": < " << left_.at(rec_.left_index) << std::endl;
            break;
          case DiffAction::DELETE:
            std::cout << rec_.right_index << ": > " << right_.at(rec_.right_index) << std::endl;
            break;
          default:
            assert(false);
        }
      }
    }
  }
}

} /* -- namespace Test */

} /* -- namespace OTest2 */
